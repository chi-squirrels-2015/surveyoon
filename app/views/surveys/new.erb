<h3 id="greeting">Hello, <%= @user.username %>!</h3>
<hr></hr>
<br>

<div id="create-frm">
  <div id="create_survey_form">
    <h4>Please enter a title for your survey.</h4>
    <form method="post" action="/surveys">
     <p><input type="text" name="title"  placeholder="Survey title"></p>
     <p><input id="create_survey_button" type="submit" value="Start"></p>
   </form>
 </div>

 <div id="for_appending"></div>

 <div class="question-answer">
   <form id="questions_and_answers_form" method="post" action="/questions">
     <p><textarea rows="3" cols="20" name="query" placeholder="Your question here"></textarea></p>

     <div id="answer_choices_div">
       <p><input type="text" name="answer[]" placeholder="Choice"></p>
       <p><input type="text" name="answer[]" placeholder="Choice"></p>
     </div>

     <p><input id="add_answer_option" type="submit" value="Add Answer Choices"></p>
     <p><input id="add_question" type="submit" value="Save Question"></p>
     <p><input id="submit_survey" type="submit" value="Submit Survey"></p>
   </form>
 </div>
